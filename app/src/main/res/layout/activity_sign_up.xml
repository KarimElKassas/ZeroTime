<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_layout"
        android:fitsSystemWindows="true"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signUp_welcome_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="72dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="مرحبا بك"
                />
            <ImageView
                android:id="@+id/signUp_app_logo_image_view"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/signUp_welcome_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_name_edit_txt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_app_logo_image_view"
                android:layout_marginTop="12dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:drawablePadding="12dp"
                android:hint="الاسم بالكامل"
                android:textColorHint="#494848"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textPersonName"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_password_edit_txt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_name_edit_txt"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:drawablePadding="12dp"
                android:hint="كلمة السر"
                android:textColorHint="#494848"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textVisiblePassword"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_primary_phone_edit_txt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_password_edit_txt"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:drawablePadding="12dp"
                android:hint="رقم الهاتف الاول"
                android:textColorHint="#494848"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:inputType="phone"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_secondary_phone_edit_txt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_primary_phone_edit_txt"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:drawablePadding="12dp"
                android:hint="رقم الهاتف الثانى"
                android:textColorHint="#494848"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:inputType="phone" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user_address_edit_txt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_secondary_phone_edit_txt"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:drawablePadding="12dp"
                android:hint="العنوان بالتفصيل"
                android:textColorHint="#494848"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:maxLines="2"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/signUp_regions_spinner"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/signUp_user_address_edit_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Button
                android:id="@+id/signUp_sign_up_btn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/signUp_regions_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/signUp_login_text_view"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#000"
                android:textColor="#FFF"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/signUp_login_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/signUp_sign_up_btn"
                app:layout_constraintEnd_toEndOf="@id/signUp_sign_up_btn"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="او تسجيل الدخول ؟"
                />
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>