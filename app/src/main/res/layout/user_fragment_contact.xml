<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf2fe"
    tools:context=".Fragments.ContactFragment"
    android:layoutDirection="ltr">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_8sdp">

            <Button
                android:id="@+id/goToChatBTn"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/rounded_btn_back_red"
                android:drawableStart="@drawable/ic_baseline_message_24"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_16sdp"
                android:fontFamily="@font/tajwal"
                android:text="الدردشه"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <Button
                android:id="@+id/goToCallBTn"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_btn_back_red"
                android:drawableStart="@drawable/ic_baseline_call_white_24"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_16sdp"
                android:fontFamily="@font/tajwal"
                android:text="إتصال"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goToChatBTn" />

            <Button
                android:id="@+id/goToMailBTn"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/rounded_btn_back_red"
                android:drawableStart="@drawable/ic_message_icon"
                android:fontFamily="@font/tajwal"
                android:text="ايميل"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_16sdp"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goToCallBTn"

                />

            </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>