                app:layout_constraintStart_toStartOf="@id/moderator_add_offer_first_fixed_offer_edit_text"
                app:layout_constraintEnd_toEndOf="@id/moderator_add_offer_first_fixed_offer_edit_text"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="#000"
                android:text="تحديث"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:textStyle="bold"
