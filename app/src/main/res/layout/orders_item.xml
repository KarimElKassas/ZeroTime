<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:background="#E4E3E3"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/display_orders_order_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp">
            <TextView
                android:id="@+id/display_orders_order_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="وصف الطلب : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_order_description_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/display_orders_order_description_text_view"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_order_notes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_description_value_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="ملاحظات : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_order_notes_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_description_value_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_order_date_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_order_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_notes_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="تاريخ الطلب : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_order_date_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_notes_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_order_date_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_order_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_date_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="مبلغ الطلب : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_order_price_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_date_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_order_price_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/display_orders_receiver_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_price_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="اسم المستلم : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_receiver_name_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_order_price_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_receiver_name_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_receiver_primary_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_receiver_name_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="الهاتف الاول للمستلم : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_receiver_primary_phone_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_receiver_name_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_receiver_primary_phone_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_receiver_secondary_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_receiver_primary_phone_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="الهاتف الثانى للمستلم : "
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_orders_receiver_secondary_phone_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_receiver_primary_phone_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_receiver_secondary_phone_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/display_orders_user_primary_phone_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/display_orders_receiver_primary_phone_text_view"
                app:layout_constraintEnd_toStartOf="@id/display_orders_receiver_secondary_phone_text_view"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:textColor="#000"
                android:textSize="18sp"
                android:visibility="gone"
                android:maxLines="1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/display_orders_expandableView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/display_orders_receiver_secondary_phone_text_view">

                <Button
                    android:id="@+id/display_orders_received_btn"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="تم الاستلام"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:background="#FF0000"
                    app:layout_constraintBottom_toBottomOf="@+id/display_orders_expandableView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/display_orders_expandableView"/>
                <Button
                    android:id="@+id/display_orders_in_progress_btn"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="جارى التوصيل"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:background="#DDA807"
                    app:layout_constraintBottom_toBottomOf="@+id/display_orders_expandableView"
                    app:layout_constraintEnd_toStartOf="@id/display_orders_received_btn"
                    app:layout_constraintTop_toTopOf="@+id/display_orders_expandableView"
                    android:layout_marginEnd="@dimen/_12sdp"/>
                <Button
                    android:id="@+id/display_orders_delivered_btn"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="تم التوصيل"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:background="#42AA02"
                    app:layout_constraintBottom_toBottomOf="@+id/display_orders_expandableView"
                    app:layout_constraintEnd_toStartOf="@id/display_orders_in_progress_btn"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="@+id/display_orders_expandableView"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>