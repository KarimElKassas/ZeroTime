<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD7D7"
    tools:context=".Moderator.ModeratorNumberOfOrders">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ordersNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/layout_slide_right"
        tools:listitem="@layout/item_orders_number" />

    <ImageView
        android:id="@+id/moderator_number_of_orders_no_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/noresult"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/numberOfOrders_fragment_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>