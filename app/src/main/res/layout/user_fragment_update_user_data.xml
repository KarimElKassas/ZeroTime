<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UpdateUserDataFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_layout"
            android:fitsSystemWindows="true"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_data_fragment_name_edit_txt"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:drawablePadding="12dp"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="الاسم بالكامل"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#000"
                    android:textColorHint="#494848"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_72sdp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_data_fragment_password_edit_txt"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_name_edit_txt"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="كلمة السر"
                    android:textColorHint="#494848"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="textVisiblePassword"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_data_fragment_primary_phone_edit_txt"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_password_edit_txt"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="رقم الهاتف الاول"
                    android:textColorHint="#494848"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="phone"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_data_fragment_secondary_phone_edit_txt"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_primary_phone_edit_txt"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="رقم الهاتف الثانى"
                    android:textColorHint="#494848"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="phone" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_data_fragment_address_edit_txt"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_secondary_phone_edit_txt"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:hint="العنوان بالتفصيل"
                    android:textColorHint="#494848"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="text"
                    android:maxLines="2"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/update_data_fragment_regions_spinner"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_address_edit_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    />

                <Button
                    android:id="@+id/update_data_fragment_update_btn"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:layout_constraintTop_toBottomOf="@id/update_data_fragment_regions_spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#000"
                    android:textColor="#FFF"
                    android:text="تعديل البيانات"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    />

                <FrameLayout
                    android:id="@+id/update_data_fragment_progressBarHolder"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.4"
                    android:animateLayoutChanges="true"
                    android:background="#000000"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ProgressBar
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:indeterminate="true"
                        android:layout_gravity="center" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>